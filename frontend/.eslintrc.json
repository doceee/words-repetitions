{
    "plugins": [
        "@typescript-eslint"
    ],
    "root": true,
    "parserOptions": {
        "project": "tsconfig.json",
        "tsconfigRootDir": "./",
        "ecmaVersion": "latest",
        "parser": "@typescript-eslint/parser",
        "extraFileExtensions": [
            ".vue"
        ],
        "requireConfigFile": false
    },
    "extends": [
        "@vue/typescript",
        "plugin:import/recommended",
        "eslint:recommended",
        "plugin:vue/vue3-strongly-recommended",
        "@vue/eslint-config-prettier",
        "plugin:import/typescript",
        "prettier"
    ],
    "ignorePatterns": [
        "src/types/**/*"
    ],
    "rules": {
        "prettier/prettier": [
            "error",
            {
                "endOfLine": "auto"
            }
        ],
        "no-plusplus": "off",
        "import/order": [
            "off"
        ],
        "vue/component-name-in-template-casing": [
            "error",
            "kebab-case"
        ],
        "no-unused-vars": [
            "error",
            {
                "vars": "all",
                "args": "after-used",
                "ignoreRestSiblings": true
            }
        ],
        "vue/max-attributes-per-line": [
            "off"
        ],
        "vue/html-self-closing": [
            "off"
        ],
        "vue/no-v-html": [
            "off"
        ],
        "vue/order-in-components": 2,
        "vue/singleline-html-element-content-newline": "off",
        "vue/multiline-html-element-content-newline": "off",
        "vue/custom-event-name-casing": [
            "error",
            "kebab-case"
        ],
        "no-console": [
            "error",
            {
                "allow": [
                    "error",
                    "warn",
                    "info"
                ]
            }
        ]
    },
    "overrides": [
        {
            "files": [
                "src/**/*"
            ],
            "parserOptions": {
                "project": "**/tsconfig.json",
                "parser": "@typescript-eslint/parser",
                "sourceType": "module"
            },
            "env": {
                "browser": true
            }
        }
    ],
    "settings": {
        "import/resolver": {
            "typescript": {}
        }
    },
    "globals": {
        "require": true,
        "process": true,
        "module": true,
        "__dirname": true,
        "BlobPart": true,
        "google": true,
        "useRuntimeConfig": true
    }
}
